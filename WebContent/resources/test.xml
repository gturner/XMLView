	<item name="projPeople" label="Project People:" type="Table" optionType="table">
		<column name="uid" label="User ID" type="TextField" />
		<column name="firstname" label="First Name" type="TextField" />
		<column name="lastname" label="Last Name" type="TextField" />
	</item>
	<item name="contactPerson" label="Contact Person:" type="TextField" class="required" tooltip="The contact person for the project" optionType="single" />
