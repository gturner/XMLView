<?xml version="1.0" encoding="UTF-8"?>
<webpage>
	<item name="projName" label="Project Name:" type="TextField" class="required" tooltip="The name of the project" optionType="single" />
	<item name="projOwner" label="Project Owner:" type="TextField" class="required" tooltip="The owner/manager of the project" optionType="single" />
	<item name="projDesc" label="Project Description:" type="TextArea" class="required" tooltip="The description of the project" optionType="single" />
	<item name="projWebsite" label="Project Website:" type="TextField" tooltip="The website of the project" optionType="single" />
	<item name="projResources" label="Project Resources:" type="Checkbox" optionType="multiple">
		<option label="Paper" value="paper" />
		<option label="Computers" value="computer" />
